    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.3",
    "@types/react-router-dom": "^4.3.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.1",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
